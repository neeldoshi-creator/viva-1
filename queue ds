# Real-Time Event Processing System using Queue (List)

event_queue = []  # using list as a queue

def add_event(event):
    """Add a new event to the queue"""
    event_queue.append(event)
    print(f"Event '{event}' added to the queue.")

def process_event():
    """Process and remove the oldest event (FIFO)"""
    if not event_queue:
        print("No events to process.")
    else:
        event = event_queue.pop(0)  # remove first event
        print(f"Event '{event}' processed and removed from queue.")

def display_events():
    """Display all pending events"""
    if not event_queue:
        print("No pending events.")
    else:
        print("Pending Events in Queue:")
        for e in event_queue:
            print(" -", e)

def cancel_event(event):
    """Cancel a specific event if not processed"""
    if event in event_queue:
        event_queue.remove(event)
        print(f"Event '{event}' has been canceled.")
    else:
        print(f"Event '{event}' not found or already processed.")

# ---------- MAIN PROGRAM ----------
while True:
    print("\n--- Event Processing System ---")
    print("1. Add Event")
    print("2. Process Next Event")
    print("3. Display Pending Events")
    print("4. Cancel an Event")
    print("5. Exit")

    choice = int(input("Enter your choice: "))

    match choice:
        case 1:
            e = input("Enter event name: ")
            add_event(e)
        case 2:
            process_event()
        case 3:
            display_events()
        case 4:
            e = input("Enter event name to cancel: ")
            cancel_event(e)
        case 5:
            print("Exiting system...")
            break
        case _:
            print("Invalid choice! Try again.")
